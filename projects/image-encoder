            <!-- ENCODE PANEL -->
            <div class="glass-panel">
                <h2 class="text-xl font-bold mb-4 text-green-400 border-b border-gray-700 pb-2">/// ENCODE (Hide Data)</h2>
                
                <div class="mb-4">
                    <label class="file-btn w-full text-center block" id="encode-label">
                        <input type="file" id="encode-input" accept="image/png, image/jpeg">
                        [ 1. Select Base Image ]
                    </label>
                    <canvas id="encode-canvas" class="preview"></canvas>
                </div>

                <div class="mb-4">
                    <label class="block text-xs text-gray-400 mb-2">2. Enter Secret Payload:</label>
                    <textarea id="secret-message" placeholder="Type the secret message here..."></textarea>
                </div>

                <button id="btn-encode" class="action-btn" disabled>[ 3. Inject Payload ]</button>
                <div id="encode-status" class="mt-4 text-xs font-mono min-h-[20px]"></div>
                
                <a id="download-link" class="file-btn w-full text-center mt-4 !text-blue-400 !border-blue-400 hidden hover:!bg-blue-900/30">
                    [ Download Injected Image ]
                </a>
            </div>

            <!-- DECODE PANEL -->
